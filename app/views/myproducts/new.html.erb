<h1 class="text-center">New Product Form</h1>
<p class="text-center">Add new product by submitting the form</p>
<%if flash[:errors]%>
  <%flash[:errors].each do |error|%>
    <p class="text-center" style='color: red'><%= error%></p>
  <%end%>
<%end%>
<div class=" p-5" >
  <%= form_for @myproduct do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title, class:"col-12 "%>
    <br>
    <%= f.label :description%>
    <%= f.text_field :description, class:"col-12 "%>
    <br>
    <%= f.label :capacity%>
    <%= f.number_field :capacity, class:"col-12 "%>
    <br>
    <%= f.label :price%>
    <%= f.number_field :price, step: :any ,class:"col-12 "%>
    <br>
    <%= f.label :is_active, class:"center"%>
    <%= f.check_box :is_active, class:"col-12 "%>
    <br>
    <%= f.label :status%>
    <%= f.select(:status, Myproduct.statuses.keys)  %>
    <br>
    <div class="d-flex">
      <%= f.submit class:"btn-success  mt-4  border-0 p-2 rounded-pill center" %> &nbsp;
    <% end %>
    <%= button_to "View all Products", myproducts_path,method: :get,class:"btn-primary center mt-4 border-0 p-2 rounded-pill" %>
  </div>
</div>
