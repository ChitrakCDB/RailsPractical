<div>
  <%if flash[:notice] %>
    <%flash.each do |name,msg| %>
      <p class="text-center" style='color: green'><%= msg %></p>
    <% end %>
  <% end %>
  <h1 class="text-center">Authors List</h1>
  <p class="text-center">Click the button to add Authors</p>
  <div class="position-absolute top-50 start-50 translate-middle">
    <div>
      <table class="table table-warning table-striped">
        <ol class="fs-2">
          <thead>
            <td class="text-center"> Name </td>
            <td class="text-center"> BirthDate </td>
            <td class="text-center"> E-mail </td>
            <td class="text-center"> Books </td>
          </thead>
          <% @authors.each do |author| %>
            <tr>
              <td><%= link_to author.firstname + " " + author.lastname, author_path(author) %></td>
              <td><%= author.dob %></td>
              <td><%= author.email %></td>
              <td>
                <% author.books.each do |book| %>
                  <ul>
                    <li><%= link_to book.name , book_path(book) %></li>
                  </ul>
                <%end%>
              </td>
            </tr>
          <%end%>
        </ol>
      </table>
    </div>
    <div class="d-flex justify-content-center align-item-center">
      <%= button_to "Add New Author" , new_author_path,method:  :get,class:"btn-success  m-4  border-0 p-2 rounded-pill" %>
      <%= button_to "Add New Book" , new_book_path,method:  :get,class:"btn-warning  m-4 border-0 p-2 rounded-pill" %>
      <%= button_to "View all Books", books_path,method: :get,class:"btn-primary  m-4  border-0 p-2 rounded-pill" %>
    </div>
  </div>
</div>
