<h1 class="text-center">Edit order Form</h1>
<p class="text-center">Update Order by submitting the form</p>
<%if flash[:errors] %>
  <%flash[:errors].each do |error| %>
    <p class="text-center" style='color: red'><%= error %></p>
  <% end %>
<% end %>
<div class=" p-5" >
  <%= form_with(model: [@rproduct, @rorder])  do |f| %>
    <%= f.label :quantity %>
    <%= f.number_field :quantity ,class:"col-12 "%>
    <div class="d-flex">
      <%=f.submit class:"btn-success  mt-4  border-0 p-2 rounded-pill center"%> &nbsp;
    <% end %>
    <%= button_to "View all Producs", rproducts_path, method: :get,class:"btn-primary center mt-4 border-0 p-2 rounded-pill" %>
  </div>
</div>