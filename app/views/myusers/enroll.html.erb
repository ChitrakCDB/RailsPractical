<h1 class="text-center">Enrollment Form</h1>
<p class="text-center">Add new enrollment by submitting the form</p>
<%if flash[:errors] %>
  <%flash[:errors].each do |error| %>
    <p class="text-center" style='color: red'><%= error %></p>
  <% end %>
<% end %>
<div class=" p-5" >
  <%= form_with scope: :enrolled_user, url:myusers_enroll_path, local: true do |f| %>
    <%= f.hidden_field :myuser_id, value: current_myuser.id %>
    <div class="center">
    <%= f.label :SelectEvent, class:"center" %>
    <%= f.select :event_id, Event.all.map { |t| [t.name, t.id]} ,class:"center"%>
    </div>
    <br>
    <div class="d-flex center">
      <%=f.submit class:"btn-success  mt-4  border-0 p-2 rounded-pill center" %> &nbsp;
    <% end %>
    <%= button_to "View all events", events_path,method: :get,class:"btn-primary center mt-4 border-0 p-2 rounded-pill" %>
  </div>
</div>
