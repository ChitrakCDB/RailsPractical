<div>
  <% if flash[:errors] %>
    <% flash.each do |name,msg| %>
      <p class="text-center" style='color: green'><%= msg %></p>
    <% end %>
  <% end %>
  <h1 class="text-center">Customers List</h1>
  <p class="text-center">Click the button to add Customers</p>
  <div class="top-50 start-50 center" >
    <div class="d-flex">
      <%= form_tag business_search_path, method: :get do %>
        <%= search_field_tag :search, params[:search], class: "form-control me-2"%>
        <div class ="d-flex center"> 
        <%= submit_tag "search", class:"btn btn-outline-success mt-2"%>
        </div>
      <% end %>
    </div>
    <div>
      <table class="table table-warning table-striped">
        <ol class="fs-2">
          <thead>
            <td class="text-center"> Name </td>
            <td class="text-center"> Email </td>
            <td class="text-center"> Phone </td>
            <td class="text-center" colspan=3> Actions </td>
          </thead>
          <% @rcustomers.each do |rcustomer|%>
            <tr>
              <td><%= rcustomer.name %></td>
              <td><%= rcustomer.email %></td>
              <td><%= rcustomer.phone %></td>
              <td><%= button_to "Edit" , edit_business_rcustomer_path(rcustomer), method: :get,class:"btn-primary center border-0 p-2 rounded-pill" %> &nbsp;</td>
              <td><%= button_to "Delete" , delete_customer_business_rcustomer_path(rcustomer), method: :delete,class:"btn-danger center border-0 p-2 rounded-pill" %> &nbsp;</td>
              <td><%= button_to "Show" , preview_business_rcustomer_path(rcustomer), method: :get,class:"btn-warning center border-0 p-2 rounded-pill" %> &nbsp;</td>
            </tr>
          <% end %>
        </ol>
      </table>
    </div>
    <div class="d-flex">
      <%= button_to "Add Customers" , new_business_rcustomers_path,method:  :get,class:"btn-success  mt-4 me-4 border-0 p-2 rounded-pill" %>
      <%= button_to "View all Products" , rproducts_path ,method:  :get,class:"btn-warning  mt-4 me-4 border-0 p-2 rounded-pill" %>
    </div>
  </div>
</div>
