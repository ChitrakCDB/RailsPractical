<div>
  <% if flash[:notice] %>
    <% flash.each do |name,msg| %>
      <p class="text-center" style='color: green'><%= msg %></p>
    <% end %>
  <% end %>
  <h1 class="text-center">Customers List</h1>
  <p class="text-center">Click the button to add Customers</p>
  <div class="top-50 start-50 center" >
    <div>
      <table class="table table-warning table-striped">
        <ol class="fs-2">
          <thead>
            <td class="text-center"> Name </td>
            <td class="text-center"> Email </td>
            <td class="text-center"> Number </td>
            <td class="text-center" colspan=3> Actions </td>
          </thead>
          <% @customers.each do |customer|%>
            <tr>
              <td><%= link_to customer.fname + " " + customer.lname, customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.phone %></td>
              <td><%= button_to "Edit" , edit_customer_path(customer), method: :get,class:"btn-primary center border-0 p-2 rounded-pill" %> &nbsp;</td>
              <td><%= button_to "Delete", customer_path(customer), method: :delete,class:"btn-danger center border-0 p-2 rounded-pill" %> &nbsp;</td>
              <td><%= button_to "Show", customer_path(customer),method: :get,class:"btn-warning center border-0 p-2 rounded-pill" %> &nbsp;</td>
            </tr>
          <% end %>
        </ol>
      </table>
    </div>
    <div class="d-flex">
      <%= button_to "Add New Customer" , new_customer_path,method:  :get,class:"btn-success  mt-4 me-4 border-0 p-2 rounded-pill" %>
      <%= button_to "View all Orders", orders_path,method: :get,class:"btn-primary  mt-4 me-4 border-0 p-2 rounded-pill" %>
      <%= button_to "View all Products", myproducts_path,method: :get,class:"btn-warning  mt-4 me-4 border-0 p-2 rounded-pill" %>
    </div>
  </div>
</div>
