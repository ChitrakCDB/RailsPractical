<h1 class="text-center">New Customer Form</h1>
<p class="text-center">Add new Customer by submitting the form</p>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p class="text-center" style='color: red'><%= error %></p>
  <% end %>
<% end %>
<div class=" p-5" >
  <%= form_for @customer do |f|%>
    <%= f.label :firstname%>
    <%= f.text_field :fname ,class:"col-12" %>
    <br>
    <%= f.label :lastname%>
    <%= f.text_field :lname ,class:"col-12" %>
    <br>
    <%= f.label :Email%>
    <%= f.text_field :email, class:"col-12" %>
    <br>
    <%= f.label :Contact%>
    <%= f.text_field :phone, class:"col-12" %>
    <br>
    <div class="d-flex">
      <%=f.submit class:"btn-success  mt-4  border-0 p-2 rounded-pill center"%> &nbsp;
    <% end %>
    <%= button_to "View all Customers", customers_path,method: :get,class:"btn-primary center mt-4 border-0 p-2 rounded-pill"%>
  </div>
</div>
