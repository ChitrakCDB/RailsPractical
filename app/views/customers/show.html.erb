<% if flash[:notice] %>
  <% flash.each do |name,msg| %>
    <p class="text-center" style='color: green'><%= msg %></p>
  <% end %>
<% end %>
<h1 class="text-center">About the Customer</h1>
<p class="text-center">Showing the Detailed Information of the Customer</p>
<h1 class="text-center">Customer Name: <%= @customer.fname %> <%= @customer.lname %> </h1>
<h6 class="text-center">E-mail: <%= @customer.email %>, Contact: <%= @customer.phone %> </h2>
<div class="flex-row center" >
  <%= button_to "Edit Customer" , edit_customer_path, method: :get,class:"btn-primary center mt-4 border-0 p-2 rounded-pill" %> &nbsp;
  <%= button_to "Delete Customer", customer_path, method: :delete,class:"btn-danger center mt-4 border-0 p-2 rounded-pill" %> &nbsp;
  <%= button_to "View all Customers", customers_path,method: :get,class:"btn-warning center mt-4 border-0 p-2 rounded-pill" %> &nbsp;
</div>
